{% extends 'base.html.twig' %}

{% block body %}


	<div class="example-wrapper">
		<h1>Blog</h1>

		<div class="album py-5 bg-light">
			<div class="container">
				<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
					{% for article in articles %}
						<div class="col">
							<div class="card shadow-sm">

								<img class="bd-placeholder-img card-img-top" src="{{article.image}}" width="100%">
								<h3>
									{{article.title | capitalize}}</h3><rect width="100%" height="100%" fill="#55595c"/>
							</img>

							<div class="card-body">
								<p class="card-text">{{article.content | capitalize}}</p>
								<div class="d-flex justify-content-between align-items-center">
									<div class="btn-group">
										<a href="{{path('blog_show', {'id' : article.id})}}">
											<button type="button" class="btn btn-sm btn-outline-secondary">View</button>
										</a>
										<a href="{{path('blog_show', {'id' : article.id})}}">
											<button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
										</a>
										<a href="{{path('blog_show', {'id' : article.id})}}">
											<button type="button" class="btn btn-sm btn-outline-secondary">Delete</button>
										</a>

									</div>
									<small class="text-muted">{{article.createdAt | date("d/m/Y")}}, at
										{{article.createdAt |date_modify("+2 hour")|date("H:i")}}</small>
								</div>
							</div>
						</div>
					</div>
				{% endfor  %}
			</div>
		</div>
	</div>
{% endblock %}
